{
  "compilerOptions": {
    "composite": true,
    "target": "esnext",
    "module": "esnext",
    "outDir": "dist",
    "moduleResolution": "bundler",
    "types": ["node"],
    "esModuleInterop": true,
    "resolveJsonModule": true
  },
  "include": ["packages/**/*.ts"],
  "exclude": ["node_modules", "dist"]
}